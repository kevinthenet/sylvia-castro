---
import { localize, type LocalizationPath, messages } from '../../i18n';
const prefix: LocalizationPath = 'about.valuesSection';

// TODO: hack for now, fix if there's a way for the alpine-i18n package to support arrays
const valuesEn = messages.en.about.valuesSection.values;
const valuesEs = messages.es.about.valuesSection.values;
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-8 lg:gap-12">
      <h2
        class="text-3xl font-medium tracking-tight sm:text-4xl"
        x-text={localize(prefix, 'header')}
      >
        My Values
      </h2>
      <div class="grid gap-8 lg:grid-cols-2" x-bind:class="{ 'hidden': $locale() === 'es' }">
        {
          valuesEn.map((column, index) => (
            <div class:list={['space-y-8', index === 1 && 'lg:mt-16']}>
              {column.map((value) => (
                <div class="flex flex-col gap-12 rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
                  <p class="text-sm">{value.ref}</p>
                  <div class="flex flex-col gap-4">
                    <h3 class="text-xl font-medium">{value.name}</h3>
                    <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                      {value.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          ))
        }
      </div>
      <div class="grid gap-8 lg:grid-cols-2" x-bind:class="{ 'hidden': $locale() === 'en' }">
        {
          valuesEs.map((column, index) => (
            <div class:list={['space-y-8', index === 1 && 'lg:mt-16']}>
              {column.map((value) => (
                <div class="flex flex-col gap-12 rounded-3xl bg-primary-500/10 px-6 py-8 dark:bg-primary-400/10">
                  <p class="text-sm">{value.ref}</p>
                  <div class="flex flex-col gap-4">
                    <h3 class="text-xl font-medium">{value.name}</h3>
                    <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
                      {value.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
